<%-include('header.ejs')%>
  
        <h1 class="mb-4">Hii, <%=user.name %></h1>
        <div class="row">
          <div class="col-md-4"> 
        <ul class="list-group">
          <%
            if(users.length>0){
                for(let i=0; i<users.length; i++){
                    %>
                    <li class="list-group-item list-group-item-dark cursor-pointer user-list" data_id="<%=users[i]['_id']%>">
                       <img src="<%='http://127.0.0.1:3000/'+ users[i]['image']%>" alt="100px" width="100px">
                        <%=users[i]['name']%>
                        <%
                             if(users[i]['is_online']==1)
                             {
                               %>
                               <sup class="online_status" id="<%=users[i]['_id']%>-status">Online</sup>
                               <%
                             }
                             else
                             {
                              %>
                              <sup class="offline_status" id="<%=users[i]['_id']%>-status">Offline</sup>
                              <% 
                              }
                        %>
                        
                    </li>
                   <%
                }
            }
            %>
           </ul>
           </div>
           <div class="col-md-7">
            <h3 class="start-head">Start-Chat</h3>
            <div class="chat-section">
            <div id="chat-container">
                  


            </div>
            <form method="post" id="chat-form">
            <input type="text" name="message" placeholder="Enter message" id="message" required>
            <input type="submit" value="Send" class="btn btn-primary">
            </form>
           </div>
           </div>



<!-- UPDATE_Modal -->
<div class="modal fade" id="updatechat" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="update-chat-form">
        <div class="modal-body">
          <p   id="edit-message-id"></p>
          <input type="text" name="message" id="edit-message" required>
          <pre>Do You Want To Update!!</pre>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary dlt-btn">Update!</button>
        </div>
      </form>
    </div>
  </div>
</div>           

<!-- Modal -->
<div class="modal fade" id="deletechat" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete-Chat</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="delete-chat-form">
      <div class="modal-body">
       <p name="id" id="delete-message-id"></p>
        <pre>Do You Want To Delete!!</pre>
         <h5><b id="delete-message"></b></h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary dlt-btn">Delete!</button>
      </div>
    </form>
    </div>
  </div>
</div>




