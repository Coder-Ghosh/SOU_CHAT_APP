<%-include('header.ejs')%>

<div class="container">
    <img src="/<%=group.image%>" alt="err">
    <h2><p><b><%=group.name%></b></p></h2>
    <h3>Limit:<b><%=group.limit%></b></h3>
    <h3>TotalMembers:<b><%=totalMember%></b></h3>
    <%
        if(available!=0)
        {
            %>
             <h3><b><%=available%> Members Can join</b></h3>
            <%
        }
        if(isOwner)
        {
            %>
            <h3><b>You are admin</b></h3>
            <%
        }
        else if(isJoined>0)
        {
            %>
            <h3><b>You Member of this group</b></h3>
            <%
        }
        else if(available ==0)
        {
            %>
            <p>Group is full</p>
            <%
        }
        else
        {
            %>
              <button class="btn btn-primary join-now" data-id="<%=group._id%>">JOIN</button>
            <%
        }

    %>
</div>


<%- include('footer.ejs') %>