</div>








  
<h1 class="mb-4">Group_Chatting</h1>
<div class="row">
  <div class="col-md-4"> 
<ul class="list-group">
  <%
    if(myGroups.length>0){
        for(let i=0; i<myGroups.length; i++){
            %>
            <li class="list-group-item list-group-item-dark cursor-pointer group-list" data_id="<%=myGroups[i]['_id']%>">
               <img src="/<%= myGroups[i]['image']%>" alt="100px" width="100px">
                <%=myGroups[i]['name']%>
            </li>
            <%   
        }
    }
    %>

    <%
    if(joinGroups.length>0){
        for(let i=0; i<joinGroups.length; i++){
            %>
            <li class="list-group-item list-group-item-dark cursor-pointer group-list" data_id="<%=joinGroups[i]['group_id']['_id']%>">
               <img src="/<%= joinGroups[i]['group_id']['image']%>" alt="photo" width="100px">
                <%=joinGroups[i]['group_id']['name']%>
            </li>
            <%   
        }
    }
    %>
    
    

   
   </ul>

